{
    "version": 4,
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/agent",
                "${workspaceFolder}/src/manager",
                "${workspaceFolder}/src/utils",
                "${workspaceFolder}/third_party/nlohmann_json/include",
                "${workspaceFolder}/third_party/cpp-httplib",
                "${workspaceFolder}/third_party/SQLiteCpp/include",
                "${workspaceFolder}/third_party/sqlite3/include",
                "${workspaceFolder}/third_party/spdlog/include",
                "${workspaceFolder}/third_party/uuid"
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++14",
            "intelliSenseMode": "macos-clang-x64",
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/agent",
                "${workspaceFolder}/src/manager",
                "${workspaceFolder}/src/utils",
                "${workspaceFolder}/third_party/nlohmann_json/include",
                "${workspaceFolder}/third_party/cpp-httplib",
                "${workspaceFolder}/third_party/SQLiteCpp/include",
                "${workspaceFolder}/third_party/sqlite3/include",
                "${workspaceFolder}/third_party/spdlog/include",
                "${workspaceFolder}/third_party/uuid"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++14",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ]
} 